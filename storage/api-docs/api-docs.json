                                "properties": {
                                    "name": {
                                        "type": "string",
                                        "example": "Hoa Hồng"
                                    },
                                    "description": {
                                        "type": "string",
                                        "example": "Hoa hồng đỏ đẹp"
                                    },
                                    "price": {
                                        "type": "number",
                                        "format": "float",
                                        "example": 150000
